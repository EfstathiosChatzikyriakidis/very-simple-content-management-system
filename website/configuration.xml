<conf_settings>

 <accessibility>
  <text>
   <!-- acceptable values are : `small', `medium', `large'. -->
   <size>medium</size>
  </text>  
 </accessibility>

 <template>
  <!-- acceptable values are : `DIR_TEMPLATES\*'. -->
  <theme>
   <admin>default</admin>
   <guest>default</guest>
  </theme>
 </template>

 <project>
  <name>
   <text>Ιστότοπος : <![CDATA[<b>yourdomain.com</b>]]></text>
   <cms>(vs-cms)</cms>
  </name>
  <version>
   <text>έκδοση :</text>
   <number><![CDATA[<b>1.0</b>]]></number>
  </version>
  <date_info>
   <text>ημερομηνία έναρξης :</text>
   <date><![CDATA[<b>02-15-08</b>]]></date>
  </date_info>
 </project>

 <output>
  <format>
   <date>Y-m-d</date>
   <time>H:i a</time>
   <separator><![CDATA[<br>]]></separator>
  </format>
 </output>

 <disallow>
  <!--
   acceptable values are :
    'op'   (opera).
    'ie'   (msie).
    'konq' (konqueror).
    'saf'  (safari).
    'moz'  (gecko).
    'ns4'  (mozilla/4).
  -->
  <broswer></broswer>
 </disallow>

</conf_settings>
